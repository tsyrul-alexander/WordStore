<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					xmlns:core_model="clr-namespace:WordStore.Core.Model.Db;assembly=WordStore.Core">
	<Style x:Key="HeaderLabel" TargetType="Label">
		<Setter Property="FontSize" Value="18" />
		<Setter Property="TextColor" Value="#8250C3" />
	</Style>
	<Style x:Key="ListItemLabel" TargetType="Label">
		<Setter Property="FontSize" Value="16" />
		<Setter Property="TextColor" Value="#5A289B" />
		<Setter Property="Margin" Value="5"/>
		<Setter Property="VerticalOptions" Value="Center"/>
	</Style>
	<DataTemplate x:Key="BaseLookupDataTemplate">
		<ViewCell>
			<Label Text="{Binding DisplayValue}" Style="{StaticResource ListItemLabel}"></Label>
		</ViewCell>
	</DataTemplate>
	<Style TargetType="Frame">
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="BorderColor" Value="Gray"/>
		<Setter Property="Margin" Value="1"/>
	</Style>
	<Style x:Key="SeparatorBox" TargetType="BoxView">
		<Setter Property="Margin" Value="1"/>
		<Setter Property="Color" Value="Gray"/>
		<Setter Property="HorizontalOptions" Value="Fill"/>
	</Style>
</ResourceDictionary>