<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					xmlns:core_model="clr-namespace:WordStore.Core.Model.Db;assembly=WordStore.Core">
	<Style x:Key="HeaderLabel" TargetType="Label">
		<Setter Property="FontSize" Value="18" />
		<Setter Property="TextColor" Value="#8250C3" />
	</Style>
	<Style x:Key="ListItemLabel" TargetType="Label">
		<Setter Property="FontSize" Value="16" />
		<Setter Property="TextColor" Value="#5A289B" />
		<Setter Property="Margin" Value="5"/>
		<Setter Property="VerticalOptions" Value="Center"/>
	</Style>
	<DataTemplate x:Key="BaseLookupDataTemplate" x:DataType="core_model:BaseDbLookupEntity">
		<ViewCell>
			<Label Text="{Binding DisplayValue}" Style="{StaticResource ListItemLabel}"></Label>
		</ViewCell>
	</DataTemplate>
</ResourceDictionary>