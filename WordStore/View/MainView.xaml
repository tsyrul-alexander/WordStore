<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:WordStore.View"
             x:Class="WordStore.View.MainView"
             BackgroundColor="White"
             BindingContext="{Binding Path=Main, Source={StaticResource Locator}}">
	<TabBar>
		<ShellContent Title="Content" Icon="add_icon.png" ContentTemplate="{DataTemplate view:ContentView}"/>
		<Tab Title="WordList">
			<ShellContent ContentTemplate="{DataTemplate view:WordListView}"/>
		</Tab>
	</TabBar>
</Shell>