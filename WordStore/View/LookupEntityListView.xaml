<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:model="clr-namespace:WordStore.Model.View"
             x:Class="WordStore.View.LookupEntityListView">
	<ContentView.Content>
		<StackLayout>
			<ListView x:Name="List" ItemsSource="{Binding Path=ItemSource}">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="model:ListItemView">
						<TextCell Text="{Binding Value}"></TextCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentView.Content>
</ContentView>