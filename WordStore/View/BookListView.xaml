<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordStore.View.BookListView"
             Title="BookListView"
             BindingContext="{Binding Path=BookList, Source={StaticResource Locator}}">
	<StackLayout>
		<CollectionView ItemsSource="{Binding Books}">
			<CollectionView.Header>
				<Frame VerticalOptions="Fill" HorizontalOptions="Fill">
					<Button Text="Add book" Command="{Binding AddBookCommand}" VerticalOptions="Fill" HorizontalOptions="Fill"></Button>
				</Frame>
			</CollectionView.Header>
			<CollectionView.ItemsLayout>
				<GridItemsLayout Orientation="Horizontal" Span="2" />
			</CollectionView.ItemsLayout>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame>
						<Label Text="{Binding DisplayValue}"></Label>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
    </StackLayout>
</ContentPage>
