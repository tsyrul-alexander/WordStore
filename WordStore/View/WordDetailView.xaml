<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:converter="clr-namespace:WordStore.Converter"
			 xmlns:view="clr-namespace:WordStore.View"
             x:Class="WordStore.View.WordDetailView"
            BindingContext="{Binding Path=WordDetail,Source={StaticResource Locator}}">
    <ContentView.Content>
		<StackLayout IsVisible="{Binding Word, Converter={StaticResource IsNullConverter}, ConverterParameter={converter:Boolean Value=True}}">
			<Label Text="{Binding Word.Value, StringFormat='Word: {0}'}" />
			<StackLayout>
				<Label Text="Translations:"/>
				<view:LookupEntityListView ItemsSource="{Binding Word.Translations}" BackgroundColor="Beige"></view:LookupEntityListView>
				<Button Text="add translations"/>
			</StackLayout>
			<StackLayout>
				<Label Text="Examples"/>
				<view:LookupEntityListView ItemsSource="{Binding Word.Examples}" BackgroundColor="Beige"></view:LookupEntityListView>
				<Button Text="add example"/>
			</StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>