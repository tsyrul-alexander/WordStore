<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordStore.View.AddWordView" BindingContext="{Binding Path=AddWord, Source={StaticResource Locator}}">
    <ContentView.Content>
		<Frame BackgroundColor="AntiqueWhite">
			<Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, *" HorizontalOptions="Fill">
				<Label Grid.Column="0" Grid.Row="0" Text="{Binding AddWordView.WordItemView.Value}" Style="{StaticResource HeaderLabel}"></Label>
				<Button Grid.Column="1" Grid.Row="0" Text="Close" Padding="10" Command="{Binding CloseCommand}"/>
			</Grid>
        </Frame>
    </ContentView.Content>
</ContentView>