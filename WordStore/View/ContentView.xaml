<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordStore.View.ContentView"
             Title="Content" BindingContext="{Binding Path=Content, Source={StaticResource Locator}}">
    <ContentPage.Content>
		<StackLayout>
			<Button Text="OpenFile" Command="{Binding OpenFileCommand}"/>
			<FlexLayout BindableLayout.ItemsSource="{Binding Content}" Wrap="Wrap" JustifyContent="Start"
				AlignItems="Start" AlignContent="Start">
				<BindableLayout.ItemTemplate>
					<DataTemplate>
						<Label Text="{Binding Path=.}"></Label>
					</DataTemplate>
				</BindableLayout.ItemTemplate>
			</FlexLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>