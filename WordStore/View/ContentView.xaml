<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordStore.View.ContentView"
			 xmlns:converter="clr-namespace:WordStore.Converter"
             Title="Content" BindingContext="{Binding Path=Content, Source={StaticResource Locator}}">
    <ContentPage.Content>
		<StackLayout>
			<Button Text="OpenFile" Command="{Binding OpenFileCommand}"/>
			<FlexLayout BindableLayout.ItemsSource="{Binding Content}" Wrap="Wrap" JustifyContent="Start"
				AlignItems="Start" AlignContent="Start">
				<BindableLayout.ItemTemplate>
					<DataTemplate>
						<Label Text="{Binding Path=Value}" Margin="1, 0, 1, 0">
							<Label.Triggers>
								<DataTrigger TargetType="Label" Binding="{Binding WordItem, Converter={StaticResource IsNullConverter}, ConverterParameter={converter:Boolean Value=True}}" Value="True">
									<Setter Property="TextColor" Value="#FFFF66"></Setter>
								</DataTrigger>
							</Label.Triggers>
						</Label>
					</DataTemplate>
				</BindableLayout.ItemTemplate>
			</FlexLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>